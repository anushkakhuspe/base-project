{
	"name": "base-project",
	"version": "0.1.0",
	"description": "This is my base project to use when creating new projects.",
	"private": true,
	"type": "module",
	"scripts": {
		"server": "node server/server.js",
		"build": "gulp build",
		"watch": "gulp",
		"lintJs": "eslint app/assets/js/src/**",
		"lintCss": "stylelint app/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",
		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"test": "npm run lint && tsc",
		"prepare": "gulp clean && npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/base-project.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"concurrently": "^6.2.1",
		"dotenv": "^10.0.0",
		"eslint": "^8.13.0",
		"express": "^4.17.1",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.0.0",
		"resolve-typescript-plugin": "^1.1.0",
		"sass": "^1.39.0",
		"stylelint": "^14.7.0",
		"stylelint-config-recommended-scss": "^6.0.0",
		"ts-loader": "^9.2.5",
		"typescript": "^4.5.2",
		"webpack": "^5.52.0"
	},
	"engines": {
		"node": ">=14"
	}
}
